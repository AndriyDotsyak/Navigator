<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andriy.navigatortest.GPS_OFFActivity">

    <TextView
        android:id="@+id/tv_GPSOFF"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/GPS_OFF_tv_GPSOFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_GPS_OFF_Settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_GPS_OFF_Cancel"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/GPS_OFF_btn_Cancel"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_GPS_OFF_Settings"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_GPSOFF" />

    <Button
        android:id="@+id/btn_GPS_OFF_Settings"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/GPS_OFF_btn_Settings"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="320dp"
        android:layout_marginRight="8dp"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>
