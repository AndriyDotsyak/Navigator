<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_ListView_Item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ItemBackgroundResource_Select"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_menu_home_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_menu_home_item"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:backgroundTint="@android:color/white" />

    <TextView
        android:id="@+id/tv_menu_home_item"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/iv_menu_home_item"
        android:layout_toRightOf="@+id/iv_menu_home_item"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>